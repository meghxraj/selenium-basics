<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite">
	<!-- suite name-->
	<test name="Test">
		<!-- include groups here-->
		<groups>
			<run>
				<include name="test" />
			</run>
		</groups>
		<classes>
			<class name="testNGDemo.Annotations"></class>
		</classes>
	</test>
	<test name="Smoke">
		<!-- include groups here-->
		<groups>
			<run>
				<include name="smoke" />
			</run>
		</groups>
		<classes>
			<class name="testNGDemo.Annotations"></class>
		</classes>
	</test>
	<test name="All">
		<classes>
			<class name="testNGDemo.Annotations"></class>
		</classes>
	</test>
</suite> <!-- test suite -> test folder(shell)-> groups-> classes -->