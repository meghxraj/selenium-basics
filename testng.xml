<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite">
	<!-- suite name-->
	<test name="Test">
		<!-- folder-->
		<classes>
			<class name="testNGDemo.testDemo1">
				<!-- testcase- classes-->
				<methods>
					<!-- including a test from class to run-->
					<include name="test2"></include>
				</methods>

			</class>
			<class name="testNGDemo.testDemo2" />
		</classes>
	</test>
	<test name="Car loan">
